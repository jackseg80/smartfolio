# .env.example
# Copie ce fichier en .env et adapte si besoin.
# Beaucoup de déploiements locaux n'ont besoin d'aucune variable.

# ---- Réseau / serveur ----
# Port Uvicorn (optionnel)
# PORT=8080

# Origins autorisés par CORS (optionnel, séparés par des virgules)
# CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# ---- Source de données CoinTracking ----
# Sélection de la source utilisée par l'API (valeur par défaut dans le code si absent)
# SOURCE=cointracking

# Mode du connecteur CoinTracking (exemples : "file" ou "api" si ton connecteur le supporte)
# COINTRACKING_MODE=file

# Si tu utilises un export CSV local (exemple) :
# COINTRACKING_CSV=./data/cointracking_balances.csv

# Si tu utilises l'API CoinTracking (exemple) :
# CT_API_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
# CT_API_SECRET=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
# 
# Ou alternative (alias compatibles) :
# COINTRACKING_API_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
# COINTRACKING_API_SECRET=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ---- Pricing ----
# CoinGecko API Key (optionnel, pour meilleurs rates limits)
# COINGECKO_API_KEY=your_coingecko_api_key_here

# Fichier de cache des prix locaux
PRICE_FILE=data/prices.json

# TTL du cache en mémoire (secondes)
PRICE_CACHE_TTL=120

# Ordre des providers de prix (séparés par virgules)
PRICE_PROVIDER_ORDER=coingecko,binance,file

# Mode pricing hybride - âge maximum des données en minutes
PRICE_HYBRID_MAX_AGE_MIN=30

# Mode pricing hybride - écart maximum autorisé en pourcentage
PRICE_HYBRID_DEVIATION_PCT=5.0

# TTL pour les balances et prix
BALANCES_TTL_SEC=60
PRICES_TTL_SEC=120

# ---- EXECUTION ENGINE - BINANCE API ----
# ⚠️  IMPORTANT: Utilisez TOUJOURS testnet en premier !
# Obtenez vos clés testnet ici: https://testnet.binance.vision/

# Mode (true=testnet, false=mainnet - DANGEREUX!)
BINANCE_SANDBOX=true

# Clés API Binance Testnet (commencent généralement par "BQ...")
# BINANCE_API_KEY=your_testnet_api_key_here
# BINANCE_API_SECRET=your_testnet_api_secret_here

# ---- EXECUTION ENGINE - KRAKEN API (Future) ----
# KRAKEN_API_KEY=your_kraken_api_key_here
# KRAKEN_API_SECRET=your_kraken_api_secret_here
# KRAKEN_SANDBOX=true

# ---- Sécurité ----
# Token requis pour accéder aux endpoints de debug (générez un token fort)
# DEBUG_TOKEN=your-secure-random-token-here

# ---- Divers ----
# Niveau de logs (INFO, DEBUG, WARNING)
# LOG_LEVEL=INFO
